<h1>Last 5 Orders</h1>
<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Customer Name</th>
      <th>Mobile Number</th>
      <th>Total Amount</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.customer_name %></td>
        <td><%= order.mobile_number %></td>
        <td><%= order.total_amount %></td>
        <td><%= order.order_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
